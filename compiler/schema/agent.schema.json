{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Agent name (becomes filename)"
    },
    "description": {
      "type": "string",
      "description": "When to use this agent"
    },
    "prompt": {
      "type": "string",
      "description": "System prompt / instructions"
    },
    "model": {
      "type": "string",
      "description": "AI model identifier"
    },
    "tools": {
      "oneOf": [
        { "type": "array", "items": { "type": "string" } },
        { "type": "object" },
        { "type": "boolean" }
      ],
      "description": "Available tools"
    },
    "permissions": {
      "type": "object",
      "properties": {
        "edit": { "enum": ["allow", "ask", "deny"] },
        "bash": { "enum": ["allow", "ask", "deny"] },
        "webfetch": { "enum": ["allow", "ask", "deny"] }
      }
    },
    "temperature": {
      "type": "number",
      "minimum": 0,
      "maximum": 2
    },
    "maxIterations": {
      "type": "integer"
    },
    "color": {
      "type": "string",
      "enum": ["red", "orange", "yellow", "green", "blue", "purple", "pink", "gray"]
    },
    "handoffs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": { "type": "string" },
          "agent": { "type": "string" },
          "prompt": { "type": "string" },
          "send": { "type": "boolean" }
        }
      }
    },
    "mcpServers": {
      "type": "object"
    },
    "target": {
      "type": "string",
      "enum": ["vscode", "github-copilot"]
    },
    "providers": {
      "type": "object",
      "properties": {
        "claude": { "type": "boolean", "default": true },
        "opencode": { "type": "boolean", "default": true },
        "copilot": { "type": "boolean", "default": true },
        "gemini": { "type": "boolean", "default": true }
      }
    }
  }
}
