{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Skill name (becomes directory name)"
    },
    "description": {
      "type": "string",
      "description": "When to use this skill"
    },
    "instructions": {
      "type": "string",
      "description": "Detailed skill instructions (markdown)"
    },
    "version": {
      "type": "string",
      "description": "Skill version (semver)"
    },
    "author": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "providers": {
      "type": "object",
      "properties": {
        "claude": { "type": "boolean", "default": true },
        "opencode": { "type": "boolean", "default": true },
        "gemini": { "type": "boolean", "default": true }
      }
    }
  }
}
